<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal" >
        
        <ImageView 
            android:id="@+id/sent_failed_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/g_ic_failed"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            />
        
        <Button
            android:id="@+id/btn_right_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/message_right_green_bg"
            android:drawableRight="@drawable/icon_file_picture"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:gravity="left|center_vertical"
            android:paddingBottom="15dp"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <com.view.asim.view.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/default_avatar_male"
            app:border_width="1px"
            app:border_color="@color/white"/>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp" />

</LinearLayout>
