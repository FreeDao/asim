<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:orientation="vertical" >

       <com.view.asim.view.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_avatar_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="40dp"
            android:src="@drawable/default_avatar_male"
            app:border_width="1dp"
   			app:border_color="@color/white" />


        <TextView
            android:id="@+id/user_nickname_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/business_card_male_icon"
            android:gravity="center"
            android:text="用户名"
            android:textColor="@color/darkgray"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="20dp"
            android:background="@color/linegray" />

        <LinearLayout
            android:id="@+id/user_remark_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/clickable_background"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="签名"
                android:textColor="@color/lightgray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_remark_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:textColor="@color/darkgray"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/linegray" />

        <LinearLayout
            android:id="@+id/user_location_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/clickable_background"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="地区"
                android:textColor="@color/lightgray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_location_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:textColor="@color/darkgray"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/linegray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/clickable_background"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="电话"
                android:textColor="@color/lightgray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/user_cellphone_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.0"
                android:singleLine="true"
                android:textColor="@color/lightgray"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/linegray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/start_groupchat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/groupchat_btn"
            android:gravity="center"
            android:text="群聊"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/start_voicechat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/videocall_btn"
            android:gravity="center"
            android:text="语音"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/start_videochat_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/voicecall_btn"
            android:gravity="center"
            android:text="录影"
            android:textColor="@color/gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/start_settings_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/settings_btn"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>