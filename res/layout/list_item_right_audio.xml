<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal" >
        
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="right"
            android:layout_marginTop="10dp"
	        android:layout_weight="1.0"
	        android:orientation="horizontal" >
	        
            <ImageView 
	            android:id="@+id/sending_progress_img"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:src="@drawable/message_sending_anim"
	            android:layout_gravity="center_vertical"
	            android:visibility="gone"
	            />
            
	        <ImageView 
	            android:id="@+id/sent_failed_img"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:src="@drawable/g_ic_failed"
	            android:layout_gravity="center_vertical"
	            android:visibility="gone"
	            />
	        
            <ImageView 
	            android:id="@+id/security_img"
	            android:layout_width="20dp"
	            android:layout_height="20dp"
	            android:layout_marginLeft="10dp"
	            android:src="@drawable/notificationbar_icon_logo_intercept_sms"
	            android:layout_gravity="center_vertical"
	            android:visibility="gone"
	            />
	        
	        <Button
	            android:id="@+id/btn_right_audio"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:background="@drawable/message_right_green_bg"
	            android:drawableRight="@drawable/audio_play_anim_right"
	            android:gravity="left|center_vertical"
	            android:paddingLeft="10dp"
	            android:paddingRight="15dp"
	            android:textSize="14dp" 
	            android:text="6''"
	            android:textColor="@color/white"/>
		</LinearLayout>
		
        <com.view.asim.view.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/default_avatar_male" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="10dp" 
        android:textSize="10sp"
        android:textColor="@color/white"/>

</LinearLayout>